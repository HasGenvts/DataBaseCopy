{
    "source": {
        "type": "postgresql",
        "host": "app-db.company.com",
        "port": 5432,
        "username": "app_reader",
        "password": "app_pwd",
        "database": "application_db",
        "schema": "public",
        "sslmode": "require"
    },
    "target": {
        "type": "mysql",
        "host": "backup-db.company.com",
        "port": 3306,
        "username": "backup_writer",
        "password": "backup_pwd",
        "database": "app_backup"
    },
    "tables": [
        {
            "source": "users",
            "target": "app_users",
            "fields": [
                {"source": "id", "target": "user_id"},
                {"source": "email", "target": "email"},
                {"source": "username", "target": "username"},
                {"source": "created_at", "target": "created_date"},
                {"source": "last_login", "target": "last_login_date"}
            ],
            "truncate": true,
            "verify": true
        },
        {
            "source": "user_settings",
            "target": "app_user_settings",
            "fields": [
                {"source": "user_id", "target": "user_id"},
                {"source": "setting_key", "target": "setting_name"},
                {"source": "setting_value", "target": "setting_value"},
                {"source": "updated_at", "target": "last_updated"}
            ],
            "truncate": true,
            "verify": true
        }
    ],
    "batch_size": 2000
} 